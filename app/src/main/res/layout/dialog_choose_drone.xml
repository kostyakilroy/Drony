<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_close" />

    </com.google.android.material.appbar.AppBarLayout>

    <RadioGroup
        android:id="@+id/choose_drone_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/choose_drone_djiair2s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/djiAir2s"/>
        <RadioButton
            android:id="@+id/choose_drone_djimavic3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/djiMavic3"/>
        <RadioButton
            android:id="@+id/choose_drone_djimini2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/djiMini2"/>
    </RadioGroup>

</LinearLayout>

